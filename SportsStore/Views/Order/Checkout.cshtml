@model Order

<h2>Оформление заказа</h2>
<p>Пожалуйста, введите свои данные, и мы отправим ваш товар прямо сейчас!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
	<h3>Заказчик</h3>
	<div class="form-group">
		<label>Имя:</label><input asp-for="Name" class="form-control" />
	</div>
	<h3>Адрес</h3>
	<div class="form-group">
		<label>Город:</label><input asp-for="City" class="form-control" />
	</div>
	<div class="form-group">
		<label>Регион/область:</label><input asp-for="State" class="form-control" />
	</div>
	<div class="form-group">
		<label>Страна:</label><input asp-for="Country" class="form-control" />
	</div>
	<h3>Опции</h3>
	<div class="checkbox">
		<label>
			<input asp-for="GiftWrap" /> Подарочная упаковка
		</label>
	</div>
	<div class="text-center">
		<input class="btn btn-primary" type="submit" value="Оформить заказ" />
	</div>
</form>